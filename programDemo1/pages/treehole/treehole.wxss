  background-size:100% 100%;
}
.touch-region{
  display:block;
  width: 60%;
  height: 70%;
  background-color: rgba(0,0,0,.2);
  margin: 0 auto;
}
.userinfo{
  display: flex;
  flex-direction: row;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff; 
  margin:auto 0px;
}
.showText{
  display: block;
  color: white;
  margin: 0 auto;
  text-align: center;
}
