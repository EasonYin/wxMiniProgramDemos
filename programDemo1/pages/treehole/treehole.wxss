page{
  width: 100%;
  height: 100%;
}
.test-bg{
  width: 100%;
  height: 100%;
  background-image:url('https://tva3.sinaimg.cn/crop.114.0.660.660.1024/005zo5VJtw1efaglj7mrcj30nb0jrte3.jpg');
